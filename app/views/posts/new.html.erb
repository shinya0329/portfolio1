<h1>画像投稿フォーム</h1>
<%= form_with model: @post, local:true do |f| %>

  <h4>Shop Name</h4>
  <%= f.text_field :shop_name %>
  <h4>Shop Image</h4>
  <%= f.attachment_field :image %>
  <h4>Introduction</h4>
  <%= f.text_area :caption %>
  <h4>Category</h4>
  <%= f.text_field :category %>
 
  
  <%= f.submit '投稿' %>
<% end %>