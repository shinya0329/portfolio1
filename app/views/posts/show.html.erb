<div>
  <%= attachment_image_tag @post, :image %>
  <p>ショップ名：<%= @post.shop_name %></p>
  <p>説明：<%= @post.caption %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  
  <% if @post.user == current_user %>
    <%= link_to "Delete", post_path(@post), method: :delete %>
  <% end %>
</div>