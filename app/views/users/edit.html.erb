<div class="bg-image-full">
  <div class="col-12 h-100 py-5" style="background-color: rgba(0,0,0,0.5);">
    <div class="text-center my-5">
      <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, fallback: "default-image.jpg", class:"img-fluid rounded-circle mb-4"; %>
      <h1 class="text-white fs-3 fw-bolder"><%= @user.name %></h1>
    </div>
  </div>
</div>

<div class="page-section text-light" style="background-color: #393C49;" >
  <div class="container px-4 px-lg-5">
    <h2 class="text-center mt-0">Edit your profile</h2>
    <hr class="divider"/>
    
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, class:"form-control", autofocus: true, id:"inputName", placeholder:"～文字以上"%>
      </div>
      <div class="form-group">
        <label for="input-introduction">introduction</label>
        <%= f.text_area :introduction, class:"form-control", id:"input-introduction" %>
      </div>
      
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg"%>
      
      <div class="form-group">
        <label for="InputImage">ProfileImage</label>
        <%= f.attachment_field :profile_image, class:"form-control", id:"InputImage", placeholder: "Profile Image" %>
      </div>
      
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="option1" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
          Check your edit!!
        </label>
      </div>
      
      
      <%= f.submit "Edit my profile", class:"btn btn-lg btn-block btn-info mt-4 rounded" %>
      
    <% end %>
    

    <p class="text-center text-white-50"><%= @user.introduction %></p>
  </div>
</div>

